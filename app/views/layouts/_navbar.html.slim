          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"
              | Admin
            ul.dropdown-menu.dropdown-menu-end aria-labelledby="navbarDropdown"
              li
                a.dropdown-item href=admin_dashboard_path Dashboard
              li
                hr.dropdown-divider
              - if can?(:manage, Source)
                li
                  a.dropdown-item href=admin_sources_path Quellen
              - if can?(:manage, Setting)
                li
                  a.dropdown-item href=admin_settings_path Settings
              - if can?(:manage, Category)
                li
                  a.dropdown-item href=admin_categories_path Kategorien
              - if can?(:manage, MailSubscription)
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item href=admin_mail_subscriptions_path Abonnenten
              li
                hr.dropdown-divider
              - if can?(:manage, User)
                li
                  a.dropdown-item href=admin_users_path Admins
              li
                a.dropdown-item href=edit_admin_user_path(current_user.id) Login anpassen
              li
                a.dropdown-item href=destroy_user_session_path data-method="delete" rel="nofollow" Logout