          a.nav-link href="/newsletter" class=("active" if request.path == '/newsletter') aria-current=("page" if request.path == '/newsletter') Newsletter
        li.nav-item class=("active" if request.path == '/rss')
          a.nav-link href="/rss" class=("active" if request.path == '/rss') aria-current=("page" if request.path == '/rss') Feeds
